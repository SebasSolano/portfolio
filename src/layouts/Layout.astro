---
import "@fontsource/inter/400.css";
import "@fontsource/inter/500.css";
import "@fontsource/inter/600.css";
import "@fontsource/inter/700.css";
import ThemeSwitcher from "../components/ThemeSwitcher.vue";

interface Props {
  title: string;
  description: string;
}

const {
  title,
  description = "Sebastian Andres Solano Madera - Full Stack Web Developer Portfolio",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-50 antialiased">
    <slot />
    <ThemeSwitcher client:load />
  </body>
</html>

<style lang="css" is:global>
  @import "../styles/antd.css";

  :root {
    --primary-50: #f0f9ff;
    --primary-100: #e0f2fe;
    --primary-200: #bae6fd;
    --primary-300: #7dd3fc;
    --primary-400: #38bdf8;
    --primary-500: #0ea5e9;
    --primary-600: #0284c7;
    --primary-700: #0369a1;
    --primary-800: #075985;
    --primary-900: #0c4a6e;
  }

  .bg-primary-50 { background-color: var(--primary-50); }
  .bg-primary-100 { background-color: var(--primary-100); }
  .bg-primary-200 { background-color: var(--primary-200); }
  .bg-primary-300 { background-color: var(--primary-300); }
  .bg-primary-400 { background-color: var(--primary-400); }
  .bg-primary-500 { background-color: var(--primary-500); }
  .bg-primary-600 { background-color: var(--primary-600); }
  .bg-primary-700 { background-color: var(--primary-700); }
  .bg-primary-800 { background-color: var(--primary-800); }
  .bg-primary-900 { background-color: var(--primary-900); }

  .text-primary-50 { color: var(--primary-50); }
  .text-primary-100 { color: var(--primary-100); }
  .text-primary-200 { color: var(--primary-200); }
  .text-primary-300 { color: var(--primary-300); }
  .text-primary-400 { color: var(--primary-400); }
  .text-primary-500 { color: var(--primary-500); }
  .text-primary-600 { color: var(--primary-600); }
  .text-primary-700 { color: var(--primary-700); }
  .text-primary-800 { color: var(--primary-800); }
  .text-primary-900 { color: var(--primary-900); }

  .border-primary-50 { border-color: var(--primary-50); }
  .border-primary-100 { border-color: var(--primary-100); }
  .border-primary-200 { border-color: var(--primary-200); }
  .border-primary-300 { border-color: var(--primary-300); }
  .border-primary-400 { border-color: var(--primary-400); }
  .border-primary-500 { border-color: var(--primary-500); }
  .border-primary-600 { border-color: var(--primary-600); }
  .border-primary-700 { border-color: var(--primary-700); }
  .border-primary-800 { border-color: var(--primary-800); }
  .border-primary-900 { border-color: var(--primary-900); }

  .from-primary-50 { --tw-gradient-from: var(--primary-50); }
  .from-primary-100 { --tw-gradient-from: var(--primary-100); }
  .from-primary-200 { --tw-gradient-from: var(--primary-200); }
  .from-primary-300 { --tw-gradient-from: var(--primary-300); }
  .from-primary-400 { --tw-gradient-from: var(--primary-400); }
  .from-primary-500 { --tw-gradient-from: var(--primary-500); }
  .from-primary-600 { --tw-gradient-from: var(--primary-600); }
  .from-primary-700 { --tw-gradient-from: var(--primary-700); }
  .from-primary-800 { --tw-gradient-from: var(--primary-800); }
  .from-primary-900 { --tw-gradient-from: var(--primary-900); }

  .to-primary-50 { --tw-gradient-to: var(--primary-50); }
  .to-primary-100 { --tw-gradient-to: var(--primary-100); }
  .to-primary-200 { --tw-gradient-to: var(--primary-200); }
  .to-primary-300 { --tw-gradient-to: var(--primary-300); }
  .to-primary-400 { --tw-gradient-to: var(--primary-400); }
  .to-primary-500 { --tw-gradient-to: var(--primary-500); }
  .to-primary-600 { --tw-gradient-to: var(--primary-600); }
  .to-primary-700 { --tw-gradient-to: var(--primary-700); }
  .to-primary-800 { --tw-gradient-to: var(--primary-800); }
  .to-primary-900 { --tw-gradient-to: var(--primary-900); }

  .group-hover\:bg-primary-50:group-hover { background-color: var(--primary-50); }
  .group-hover\:bg-primary-100:group-hover { background-color: var(--primary-100); }
  .hover\:bg-primary-600:hover { background-color: var(--primary-600); }
  .hover\:bg-primary-700:hover { background-color: var(--primary-700); }
  .hover\:text-primary-600:hover { color: var(--primary-600); }
  .hover\:text-primary-800:hover { color: var(--primary-800); }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(50px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .fade-in {
    animation: fadeIn 1s ease-out;
  }

  .slide-up {
    animation: slideUp 1s ease-out;
  }

  section {
    scroll-margin-top: 4rem;
  }

  .hover-lift {
    transition: transform 0.5s ease;
  }

  .hover-lift:hover {
    transform: translateY(-2px);
  }
</style>
