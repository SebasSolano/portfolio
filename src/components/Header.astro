---
const currentWorking =
  Math.random() > 0.5
    ? {
        type: "Currently working with:",
        options: ["VueJS, Firebase, NodeJS", "NodeJS, TypeScript, Socket.io"],
      }
    : {
        type: "Current projects at work:",
        options: ["GradeGain.co", "Dueword"],
      };

const selectedType = currentWorking.type;
const selectedOption =
  currentWorking.options[
    Math.floor(Math.random() * currentWorking.options.length)
  ];
---

<header
  class="relative bg-gradient-to-br from-primary-900 to-primary-700 text-white overflow-hidden"
>
  <div class="absolute inset-0 bg-[url('/grid.svg')] opacity-10"></div>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 md:py-32 relative">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <div class="fade-in">
        <span
          class="inline-block px-4 py-2 rounded-full bg-primary-800/50 text-primary-200 text-sm font-medium mb-6 hover:bg-primary-800 cursor-pointer"
        >
          Available for New Projects
        </span>
        <h1 class="text-4xl md:text-5xl font-bold mb-4 leading-tight">
          Sebastian Andres Solano Madera
        </h1>
        <h2 class="text-2xl md:text-3xl text-primary-200 mb-6">
          Full Stack Developer
        </h2>
        <p class="text-lg text-primary-100 mb-8 max-w-lg">
          With experience in agile methodologies, multiple frameworks, and a
          strong focus on quality, I specialize in developing web and mobile
          applications that address real business needs.
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="#projects"
            class="text-white px-6 py-3 font-semibold transition-all duration-500 hover-lift hover:underline"
            >View Projects</a
          >
          <a
            href="#contact"
            class="text-white px-6 py-3 font-semibold transition-all duration-600 hover-lift hover:underline"
            >Contact Me</a
          >
        </div>
      </div>
      <div class="relative slide-up">
        <div
          class="aspect-square rounded-full overflow-hidden border-4 border-white/20 shadow-lg max-w-md mx-auto transform hover:scale-[1.02] transition-all duration-300"
        >
          <img
            src=""
            alt="Sebastian Solano"
            class="w-full h-full object-cover"
            width="400"
            height="400"
          />
        </div>
        <div
          class="transition-all duration-300 absolute -bottom-4 -right-4 bg-white/10 backdrop-blur-lg rounded-2xl p-4 shadow-md border border-white/20 cursor-pointer hover:scale-[1.02]"
        >
          <p class="text-sm font-medium">{selectedType}</p>
          <p class="text-primary-200 font-semibold">{selectedOption}</p>
        </div>
      </div>
    </div>
  </div>
</header>
